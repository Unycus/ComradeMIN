<Page x:Class="ComradeMIN.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComradeMIN"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"

      Title="LoginPage">

    <Grid HorizontalAlignment="Right" Width="800" Height="450" VerticalAlignment="Center">
        <Button x:Name="Enter" Content="Войти" HorizontalAlignment="Left" Margin="485,252,0,0" VerticalAlignment="Top" Height="30" Width="127" Click="Enter_Click"/>
        <Button x:Name="Enter_to_register" Content="Регистрация" HorizontalAlignment="Left" Margin="485,287,0,0" VerticalAlignment="Top" Height="30" Width="127" Click="Enter_to_register_Click"/>
        <TextBox x:Name="Password_input" HorizontalAlignment="Left" Margin="422,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        <TextBox x:Name="Login_input" HorizontalAlignment="Left" Margin="422,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        <Label x:Name="Text_login" Content="Логин" HorizontalAlignment="Left" Margin="351,203,0,0" VerticalAlignment="Top" Height="21" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_password" Content="Пароль" HorizontalAlignment="Left" Margin="351,226,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_Voiti" Content="ВХОД" HorizontalAlignment="Left" Margin="526,162,0,0" VerticalAlignment="Top" Height="29" Foreground="Black" Width="48" FontSize="14" Background="Transparent"/>
        <Image HorizontalAlignment="Left" Height="160" Margin="59,56,0,0" VerticalAlignment="Top" Width="160" Source="/photo_5312402352608771339_y.jpg">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/photo_5312402352608771339_y.jpg" Stretch="Uniform" TileMode="None"/>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Page>
