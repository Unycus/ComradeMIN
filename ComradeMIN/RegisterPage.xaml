<Page x:Class="ComradeMIN.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComradeMIN"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1300"
      Title="RegisterPage">

    <Grid Height="450" VerticalAlignment="Center" HorizontalAlignment="Right" Width="800">

        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" Margin="484,314,0,0" 
                VerticalAlignment="Top" Height="30" Width="127"
    Background="Transparent"
    BorderThickness="0"
    Foreground="Black"
    FontSize="16"
    MouseEnter="Back_registration_enter"
    MouseLeave="Back_registration_leave" 
        Click="Back_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Овал с возможностью масштабирования -->
                        <Rectangle x:Name="Oval_registration_back"
                    Fill="#E0E0E0"
                    StrokeThickness="0"
                    RadiusX="8"
                    RadiusY="8"
                    RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!-- Контент (не увеличивается) -->
                        <ContentPresenter HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Register" Content="Регистрация" HorizontalAlignment="Left" Margin="484,280,0,0" 
                VerticalAlignment="Top" Height="30" Width="127"
Background="Transparent"
BorderThickness="0"
Foreground="Black"
FontSize="16"
MouseEnter="Register_Enter"
MouseLeave="Register_Leave" 
    Click="Register_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Овал с возможностью масштабирования -->
                        <Rectangle x:Name="Oval_registration"
                Fill="#E0E0E0"
                StrokeThickness="0"
                RadiusX="8"
                RadiusY="8"
                RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!-- Контент (не увеличивается) -->
                        <ContentPresenter HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="422,226,0,202" Width="254" Height="22">
            <TextBox x:Name="Password_input" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="422,252,0,176" Width="254" Height="22">
            <TextBox x:Name="Password_input2" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
             TextWrapping="Wrap" VerticalAlignment="Center" Width="254" SelectionOpacity="0" MaxLines="1"/>
        </Border>

        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="422,200,0,228" Width="254" Height="22">
            <TextBox x:Name="Login_input" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
             TextWrapping="Wrap" VerticalAlignment="Center" Width="217" SelectionOpacity="0" MaxLines="1"/>
        </Border>

        <Label x:Name="Text_login" Content="Логин" HorizontalAlignment="Left" Margin="368,199,0,0" VerticalAlignment="Top" Height="21" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_password" Content="Пароль" HorizontalAlignment="Left" Margin="363,226,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_register" Content="РЕГИСТРАЦИЯ" HorizontalAlignment="Left" Margin="493,162,0,0" VerticalAlignment="Top" Height="29" Foreground="Black" Width="103" FontSize="14" Background="Transparent"/>

        <Label x:Name="Text_password_Копировать" Content="Повторите пароль" HorizontalAlignment="Left" Margin="312,251,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="95" FontSize="10"/>

    </Grid>
</Page>
