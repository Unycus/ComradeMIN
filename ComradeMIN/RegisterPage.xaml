<Page x:Class="ComradeMIN.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComradeMIN"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="RegisterPage">

    <Grid Height="750" VerticalAlignment="Center" HorizontalAlignment="Center" Width="999">

        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" Margin="820,414,0,0" 
                VerticalAlignment="Top" Height="34" Width="120"
    Background="Transparent"
    BorderThickness="0"
    Foreground="Black"
    FontSize="16"
    MouseEnter="Back_registration_enter"
    MouseLeave="Back_registration_leave" 
        Click="Back_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Овал с возможностью масштабирования -->
                        <Rectangle x:Name="Oval_registration_back"
                    Fill="#E0E0E0"
                    StrokeThickness="0"
                    RadiusX="8"
                    RadiusY="8"
                    RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!-- Контент (не увеличивается) -->
                        <ContentPresenter HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Register" Content="Регистрация" HorizontalAlignment="Left" Margin="686,414,0,0" 
                VerticalAlignment="Top" Height="34" Width="120"
Background="Transparent"
BorderThickness="0"
Foreground="Black"
FontSize="16"
MouseEnter="Register_Enter"
MouseLeave="Register_Leave" 
    Click="Register_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Овал с возможностью масштабирования -->
                        <Rectangle x:Name="Oval_registration"
                Fill="#E0E0E0"
                StrokeThickness="0"
                RadiusX="8"
                RadiusY="8"
                RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!-- Контент (не увеличивается) -->
                        <ContentPresenter HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="686,356,0,372" Width="254" Height="22">
            <TextBox x:Name="Password_input" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="686,382,0,346" Width="254" Height="22">
            <TextBox x:Name="Password_input2" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
             TextWrapping="Wrap" VerticalAlignment="Center" Width="254" SelectionOpacity="0" MaxLines="1"/>
        </Border>

        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="686,330,0,398" Width="254" Height="22">
            <TextBox x:Name="Login_input" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" FontSize="12" Padding="4" 
             TextWrapping="Wrap" VerticalAlignment="Center" Width="217" SelectionOpacity="0" MaxLines="1"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="612,330,0,398" Width="40" Height="22">
            <Label x:Name="Text_login" Content="логин" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Foreground="Black" Width="41" FontSize="10" Margin="2,-2,0,0"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="612,356,0,372" Width="40" Height="22">
            <Label x:Name="Text_password" Content="пароль" HorizontalAlignment="Center" Margin="0,-2,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="44" FontSize="10"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="562,382,0,346" Width="90" Height="22">
            <Label x:Name="Text_password_Копировать" Content="повторите пароль" HorizontalAlignment="Center" Margin="0,-2,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="94" FontSize="10"/>
        </Border>
        <Border Background="#E0E0E0" CornerRadius="8" HorizontalAlignment="Left" Margin="768,264,0,456" Width="104">
            <Label x:Name="Text_register" Content="РЕГИСТРАЦИЯ" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="29" Foreground="Black" Width="105" FontSize="14" Background="Transparent"/>
        </Border>
    </Grid>
</Page>
