<Page x:Class="ComradeMIN.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComradeMIN"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Height="450" VerticalAlignment="Center" HorizontalAlignment="Right" Width="800">
        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" Margin="484,314,0,0" VerticalAlignment="Top" Height="30" Width="127" Click="Enter_Click"/>
        <Button x:Name="Register" Content="Регистрация" HorizontalAlignment="Left" Margin="484,280,0,0" VerticalAlignment="Top" Height="30" Width="127" Click="Enter_to_register_Click"/>
        <TextBox x:Name="Password_input" HorizontalAlignment="Left" Margin="422,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        <TextBox x:Name="Login_input" HorizontalAlignment="Left" Margin="422,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        <Label x:Name="Text_login" Content="Логин" HorizontalAlignment="Left" Margin="351,203,0,0" VerticalAlignment="Top" Height="21" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_password" Content="Пароль" HorizontalAlignment="Left" Margin="351,226,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="56" FontSize="10"/>
        <Label x:Name="Text_register" Content="РЕГИСТРАЦИЯ" HorizontalAlignment="Left" Margin="493,162,0,0" VerticalAlignment="Top" Height="29" Foreground="Black" Width="103" FontSize="14" Background="Transparent"/>
        <TextBox x:Name="Password_input2" HorizontalAlignment="Left" Margin="422,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" SelectionOpacity="0" MaxLines="1"/>
        <Label x:Name="Text_password_Копировать" Content="Повторите пароль" HorizontalAlignment="Left" Margin="312,248,0,0" VerticalAlignment="Top" Height="24" Foreground="Black" Width="95" FontSize="10"/>

    </Grid>
</Page>
